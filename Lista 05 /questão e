using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			bool condicao = true;
			
			string resultado = (condicao)? "Condisão verdadeira." : "Condisão falsa.";
			Console.WriteLine(resultado);
			
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
